{
  "manifest_version": 3,
  "name": "带货视频助手",
  "version": "1.0.0",
  "description": "实时监测页面视频并添加下载按钮，方便用户快速下载视频文件",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://compass.jinritemai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://compass.jinritemai.com/*"],
      "js": ["content.js"]
    }
  ]
}